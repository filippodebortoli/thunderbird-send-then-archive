{
    "manifest_version": 2,
    "name": "Send and Archive",
    "description": "Archives messages you reply to",
    "version": "0.1.1",
    "author": "Filippo De Bortoli",
    "applications": {
        "gecko": {
            "id": "sendandarchive@filippodebortoli",
            "strict_min_version": "78.0"
        }
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "compose_action": {
      "default_title": "Send and Archive"
    },
    "permissions": [
      "compose",
      "compose.send",
      "messagesRead",
      "messagesMove"

    ]

}