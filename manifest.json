{
    "manifest_version": 2,
    "name": "Send and Archive",
    "description": "Archives messages you reply to",
    "version": "0.1.1",
    "author": "Filippo De Bortoli",
    "applications": {
        "gecko": {
            "id": "sendandarchive@filippodebortoli",
            "strict_min_version": "78.0"
        }
    },
    "background": {
      "scripts": [
        "background.js"
      ]
    },
    "compose_action": {
      "default_title": "Send and Archive",
      "default_icon": "images/icon-32x32.svg"
    },
    "permissions": [
      "compose",
      "compose.send",
      "messagesRead",
      "messagesMove"

    ],
    "icons": {
      "64": "images/icon-64x64.svg",
      "32": "images/icon-32x32.svg",
      "16": "images/icon-16x16.svg"
    }

}